{
  "version": "0.0.0",
  "npmClient": "npm",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/*.md", "./build", "./docs"],
  "command": {
    "publish": {
      "ignoreChanges": [
        "docs",
        "*.md"
      ],
      "message": "chore(release): publish %s"
    }
  }
}
