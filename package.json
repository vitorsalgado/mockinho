{
  "name": "@mockdog/monorepo",
  "version": "0.0.0",
  "description": "Node.js Mock Server",
  "private": true,
  "scripts": {
    "start:http": "nodemon --config http/.nodemon.config.json",
    "prepare": "husky install",
    "bootstrap": "lerna bootstrap --hoist && lerna link",
    "build": "lerna run build",
    "release": "standard-version",
    "test": "jest --detectOpenHandles",
    "test:coverage": "npm run test -- --coverage",
    "test:ci": "npm run test -- --colors --coverage --ci",
    "test:coverage:upload": "codecov -f coverage/*.json",
    "lint": "eslint --ext .ts,.js .",
    "lint:fix": "npm run lint -- --fix",
    "lint:ci": "npm run lint && npm run prettier:ci",
    "prettier": "prettier 'core/**' 'core-matchers/**' 'http/**' 'examples/**' --write --ignore-unknown",
    "prettier:ci": "npm run prettier -- --check",
    "clean": "lerna clean && npm run clean:build",
    "clean:build": "lerna exec -- rm -rf dist && lerna exec -- rm -rf tsconfig.tsbuildinfo && lerna exec -- rm -rf tsconfig.build.tsbuildinfo"
  },
  "workspaces": [
    "core",
    "core-matchers",
    "http",
    "examples/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitorsalgado/mockdog.git"
  },
  "author": {
    "name": "Vitor Hugo Salgado",
    "email": "vsalgadopb@gmail.com",
    "url": "https://github.com/vitorsalgado"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vitorsalgado/mockdog/issues"
  },
  "homepage": "https://github.com/vitorsalgado/mockdog#readme",
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/body-parser": "^1.19.1",
    "@types/busboy": "^0.2.4",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/http-proxy": "^1.17.7",
    "@types/jest": "^27.0.1",
    "@types/js-yaml": "^4.0.3",
    "@types/mime-types": "^2.1.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.7.10",
    "@types/object-hash": "^2.1.1",
    "@types/pino": "^6.3.11",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "@types/yargs": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "codecov": "^3.8.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "standard-version": "^9.3.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.2"
  }
}
