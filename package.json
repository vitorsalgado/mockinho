{
  "name": "@mockdog/monorepo",
  "version": "0.0.0",
  "description": "Node.js Mock Server",
  "private": true,
  "scripts": {
    "start:http": "nodemon --config http/.nodemon.config.json",
    "start:grpc": "nodemon --config grpc/.nodemon.config.json",
    "prepare": "husky install",
    "bootstrap": "lerna bootstrap --hoist && lerna link",
    "build": "lerna run build",
    "release": "standard-version",
    "test": "jest --detectOpenHandles",
    "test:coverage": "npm run test -- --coverage",
    "test:ci": "npm run test -- --colors --coverage --ci",
    "lint": "eslint --ext .ts,.js .",
    "lint:fix": "npm run lint -- --fix",
    "lint:ci": "npm run lint && npm run format:ci",
    "format": "prettier 'core/**' 'core_matchers/**' 'http/**' 'grpc/**' 'examples/**' --write --ignore-unknown",
    "format:ci": "npm run format -- --check",
    "clean": "lerna clean && npm run clean:build",
    "clean:build": "lerna exec -- rm -rf dist && lerna exec -- rm -rf tsconfig.tsbuildinfo && lerna exec -- rm -rf tsconfig.build.tsbuildinfo"
  },
  "workspaces": [
    "core",
    "core_matchers",
    "http",
    "http_jest",
    "grpc",
    "examples/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitorsalgado/mockdog.git"
  },
  "author": {
    "name": "Vitor Hugo Salgado",
    "email": "vsalgadopb@gmail.com",
    "url": "https://github.com/vitorsalgado"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vitorsalgado/mockdog/issues"
  },
  "homepage": "https://github.com/vitorsalgado/mockdog#readme",
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@jest/types": "^27.4.2",
    "@types/body-parser": "^1.19.2",
    "@types/busboy": "^1.3.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/http-proxy": "^1.17.8",
    "@types/jest": "^27.4.0",
    "@types/js-yaml": "^4.0.5",
    "@types/mime-types": "^2.1.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.10",
    "@types/object-hash": "^2.2.1",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "dotenv": "^14.2.0",
    "eslint": "^8.7.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "fs-extra": "^10.0.0",
    "grpc_tools_node_protoc_ts": "^5.3.2",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lerna": "^4.0.0",
    "lint-staged": "^12.2.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "source-map-support": "^0.5.21",
    "standard-version": "^9.3.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "packageManager": "yarn@3.1.1"
}
