{
  "name": "@mockinho/monorepo",
  "version": "0.0.0",
  "description": "Node.js Mock Server",
  "private": true,
  "scripts": {
    "start": "nodemon --ext js,ts,json,env,yaml,yml packages/http/cmd/mockinho-http/index.ts",
    "prepare": "husky install",
    "bootstrap": "lerna bootstrap --hoist && lerna link",
    "build": "lerna run build",
    "release": "standard-version",
    "test": "jest --detectOpenHandles",
    "test:coverage": "npm run test -- --coverage",
    "test:ci": "npm run test -- --colors --coverage --ci",
    "test:coverage:upload": "codecov -f coverage/*.json",
    "lint": "eslint --ext .ts,.js .",
    "lint:fix": "npm run lint -- --fix",
    "lint:ci": "npm run lint && npm run prettier:ci",
    "prettier": "prettier 'packages/**' --write --ignore-unknown",
    "prettier:ci": "npm run prettier -- --check",
    "clean": "lerna clean && npm run clean:build",
    "clean:build": "lerna exec -- rm -rf dist && lerna exec -- rm -rf tsconfig.tsbuildinfo && lerna exec -- rm -rf tsconfig.build.tsbuildinfo"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitorsalgado/mockinho.git"
  },
  "author": {
    "name": "Vitor Hugo Salgado",
    "email": "vsalgadopb@gmail.com",
    "url": "https://github.com/vitorsalgado"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vitorsalgado/mockinho/issues"
  },
  "homepage": "https://github.com/vitorsalgado/mockinho#readme",
  "dependencies": {
    "dotenv": "^10.0.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/body-parser": "^1.19.1",
    "@types/busboy": "^0.2.4",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/js-yaml": "^4.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.3.3",
    "@types/pino": "^6.3.9",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "codecov": "^3.8.3",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.1",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "standard-version": "^9.3.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  }
}
